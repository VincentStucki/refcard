name: Build and Inspect React App

on: 
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-22.04

    steps:
      - name: Checkout the App
        uses: actions/checkout@v2

      - name: install dependencies
        run: npm i

      - name: build the app
        run: npm run build

      - name: debug build folder
        run: ls -la
